<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/id_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/id_left_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/goldenYellow"
            android:src="@android:drawable/ic_menu_myplaces" />

        <ImageView
            android:id="@+id/id_right_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:src="@android:drawable/ic_menu_myplaces" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@id/id_left_player"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="PLAYER X"
            android:textColor="@color/goldenYellow" />

        <Button
            android:id="@id/id_right_player"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="PLAYER O"
            android:textColor="@color/goldenYellow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_win_game_icon"
        style="@style/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/id_circle1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="180dp"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:id="@+id/id_circle2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:id="@+id/id_circle3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/presence_online" />

    </LinearLayout>
    <TextView
        android:id="@+id/id_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_weight="1"
        android:text="Player X turn"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/id_button1"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="@android:color/secondary_text_dark" />

        <Button
            android:id="@+id/id_button2"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="?attr/colorControlHighlight" />

        <Button
            android:id="@+id/id_button3"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="@android:color/secondary_text_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/id_button4"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="?attr/colorControlHighlight" />

        <Button
            android:id="@+id/id_button5"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="@android:color/secondary_text_dark" />

        <Button
            android:id="@+id/id_button6"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="?attr/colorControlHighlight" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/id_button7"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="@android:color/secondary_text_dark" />

        <Button
            android:id="@+id/id_button8"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="?attr/colorControlHighlight" />

        <Button
            android:id="@+id/id_button9"
            style="@style/marginsmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:backgroundTint="@android:color/secondary_text_dark" />
    </LinearLayout>

    <Button

        android:id="@+id/id_reset"
        style="@style/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:backgroundTint="#6FBAAE"
        android:text="RESET"
        android:textSize="20sp" />


</LinearLayout>